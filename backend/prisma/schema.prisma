// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  passwordHash  String    @map("password_hash")
  firstName     String?   @map("first_name")
  lastName      String?   @map("last_name")
  role          UserRole  @default(USER)
  apiKey        String?   @unique @map("api_key")
  isActive      Boolean   @default(true) @map("is_active")
  lastLoginAt   DateTime? @map("last_login_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  projects      Project[]
  usageRecords  UsageRecord[]

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
  API_USER
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @map("user_id") @db.ObjectId
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scripts     Script[]
  productions Production[]

  @@map("projects")
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  DELETED
}

model Script {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String   @map("project_id") @db.ObjectId
  title       String
  content     String
  metadata    Json?
  version     Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  productions Production[]

  @@map("scripts")
}

model Production {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String   @map("project_id") @db.ObjectId
  scriptId    String?  @map("script_id") @db.ObjectId
  voiceId     String?  @map("voice_id")
  musicId     String?  @map("music_id") @db.ObjectId
  status      ProductionStatus @default(PENDING)
  settings    Json?
  outputUrl   String?  @map("output_url")
  duration    Int?
  errorMessage String? @map("error_message")
  progress    Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  script      Script?  @relation(fields: [scriptId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  music       MusicTrack? @relation(fields: [musicId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("productions")
}

enum ProductionStatus {
  PENDING
  GENERATING_VOICE
  GENERATING_MUSIC
  MIXING
  COMPLETED
  FAILED
}

model MusicTrack {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  genre       String?
  mood        String?
  duration    Int
  fileUrl     String   @map("file_url")
  isGenerated Boolean  @default(false) @map("is_generated")
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at")

  productions Production[]

  @@map("music_tracks")
}

model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        JobType
  payload     Json
  status      JobStatus @default(PENDING)
  progress    Int      @default(0)
  result      Json?
  errorMessage String? @map("error_message")
  attempts    Int      @default(0)
  maxAttempts Int      @default(3) @map("max_attempts")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  completedAt DateTime? @map("completed_at")

  @@map("jobs")
}

enum JobType {
  SCRIPT_GENERATION
  TTS_GENERATION
  MUSIC_GENERATION
  AUDIO_MIXING
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

model UsageRecord {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @map("user_id") @db.ObjectId
  resourceType ResourceType @map("resource_type")
  quantity    Int
  cost        Float?
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("usage_records")
}

enum ResourceType {
  TTS_CHARACTERS
  MUSIC_GENERATION
  SCRIPT_GENERATION
  AUDIO_MIXING
}
