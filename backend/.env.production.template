# Production Environment Configuration for VoiceAd Platform
# Copy this file to .env and update with your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=5011

# IMPORTANT: Replace with your EC2 public IP or domain
FRONTEND_URL=http://YOUR_EC2_IP_ADDRESS

# ============================================================================
# DATABASE CONFIGURATION (MongoDB)
# ============================================================================
DATABASE_URL=mongodb://localhost:27017/voicead_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# JWT CONFIGURATION
# IMPORTANT: Generate secure random strings for production!
# Use: openssl rand -base64 32
# ============================================================================
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_EXPIRE=30d

# ============================================================================
# ELEVENLABS API CONFIGURATION
# IMPORTANT: Add your actual ElevenLabs API key
# Get it from: https://elevenlabs.io/app/settings/api-keys
# ============================================================================
ELEVENLABS_API_KEY=your_actual_elevenlabs_api_key_here
ELEVENLABS_API_URL=https://api.elevenlabs.io/v1

# ============================================================================
# SUNO API CONFIGURATION (music generation)
# ============================================================================
SUNO_API_KEY=your_actual_suno_api_key_here

# ============================================================================
# OPENAI API CONFIGURATION
# IMPORTANT: Add your actual OpenAI API key
# Get it from: https://platform.openai.com/api-keys
# ============================================================================
OPENAI_API_KEY=your_actual_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ============================================================================
# MUSIC LIBRARY CONFIGURATION (pre-analyzed music catalog for RAG selection)
# ============================================================================
MUSIC_LIBRARY_PATH=./uploads/music-library

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/ogg

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS CONFIGURATION
# IMPORTANT: Replace with your EC2 public IP or domain
# ============================================================================
CORS_ORIGIN=http://YOUR_EC2_IP_ADDRESS
